<h1 class="display-2 text-center">Longest Word Game</h1>
<h1 class="display-5 text-center">your letters are ...</h1>



<form action="/score" method="post" data-turbo="false">
  <!-- ... -->
  <div class="container">
    <div class="row justify-content-center align-items-center">

      <div class="mt-5 text-center display-6 card text-white bg-success mb-3" style="max-width: 24rem;">
        <% @letters.each do |letter| %>
        <%= letter %>
        <% end %>
      </div>

      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters %>
      <%  %>

      <div class= "mt-5">
        <input class="form-control" type="text" name="word">
      </div>

      <div class="mt-3 text-center">
        <input class="btn btn-primary col-sm-4" type="submit" value="Play!">
      </div>



    </div>
  </div>








</form>
